<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <title>New Mongoose</title>
</head>

<body>
    <div class="container">
        <% JSON.stringify(messages) %>
        <div class="myform">
            <h1 class="text-center">Welcome to Mongoose</h1>
            <form action="/mongooses" method="POST">
                <div class="form-group row">
                    <div class="col-md-6 offset-3">
                        <label for="exampleInputEmail1">Name:</label>
                        <% if (messages.name) {%>
                        <% for (error of messages.name) {%>
                        <span class="text-danger">
                            <%= error %>
                        </span>
                        <% } %>
                        <% } %>

                        <input type="text" class="form-control" name="name" placeholder="Mongoose Name:">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6 offset-3">
                        <label for="exampleInputEmail1">Age:</label>
                        <% if (messages.age) {%>
                        <% for (error of messages.age) {%>
                        <span class="text-danger">
                            <%= error %>
                        </span>
                        <% } %>
                        <% } %>
                        <input type="text" class="form-control" name="age" placeholder="Mongoose Age:">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6 offset-3">
                        <label for="exampleInputEmail1">Height:</label>
                        <% if (messages.height) {%>
                        <% for (error of messages.height) {%>
                        <span class="text-danger">
                            <%= error %>
                        </span>
                        <% } %>
                        <% } %>
                        <input type="text" class="form-control" name="height" placeholder="Mongoose Height:">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 offset-3">
                        <button type="submit" class="btn btn-success btn-lg">Add New Mongoose!</button>
                        <a href="/" class="btn btn-primary btn-lg">Go Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>